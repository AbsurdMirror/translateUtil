{
  "name": "electron_version",
  "version": "1.0.0",
  "main": "src/main/index.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder build --win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "基于 Electron 开发的跨平台文本翻译工具，支持快捷键调用、PDF 翻译、AI 智能分段等功能。",
  "devDependencies": {
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "axios": "^1.8.1",
    "natural": "^8.0.1"
  },
  "build": {
    "appId": "com.translator.app",
    "productName": "文本翻译工具",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "文本翻译工具"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "tokens_keys",
        "to": "tokens_keys",
        "filter": ["*.token"]
      }
    ]
  }
}
